{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "github>kube-components-stack/renovate-presets:default"
  ],
  "dependencyDashboard": true,
  "baseBranches": ["master"],
  "regexManagers": [
    {
      "fileMatch": ["^helm-generator\\.yaml$"],
      "matchStrings": [
        "name:\\s+(?<depName>\\S+)\\nversion:\\s+(?<currentValue>\\S+)\\nrepo:\\s+(?<registryUrl>\\S+)"
      ],
      "datasourceTemplate": "helm"
    }
  ]
}
